// 现代主流字体系统
body
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

// VuePress 1.x 兼容的现代化样式
.sidebar
  .sidebar-group
    .sidebar-heading
      font-size: 14px
      font-weight: 600
      color: #1f2937
      margin-bottom: 0.25rem
      padding: 0.25rem 1rem
      text-transform: uppercase
      letter-spacing: 0.05em
      font-family: inherit
    
    .sidebar-group-items
      margin-bottom: 0.75rem
      
      .sidebar-link
        font-size: 14px
        font-weight: 400
        padding: 0.25rem 1rem
        color: #374151
        border-radius: 0.25rem
        margin: 0.125rem 0.5rem
        transition: all 0.15s ease
        font-family: inherit
        
        &:hover
          color: #111827
          background-color: #f3f4f6
          
        &.active
          color: #3b82f6
          background-color: #dbeafe
          font-weight: 500

// 导航栏优化
.navbar
  .nav-links
    .nav-item
      .nav-link
        font-size: 14px
        font-weight: 500
        padding: 0.5rem 0.75rem
        border-radius: 0.25rem
        font-family: inherit
        
        &:hover
          background-color: #f3f4f6

// 现代化内容主体样式
.page
  .content
    font-size: 16px
    line-height: 1.7
    font-family: inherit
    max-width: 900px
    padding: 2rem 3rem
    color: #2c3e50
    
    // 标题样式
    h1, h2, h3, h4, h5, h6
      font-family: inherit
      font-weight: 700
      color: #1a202c
      margin-top: 2rem
      margin-bottom: 1rem
      line-height: 1.3
      
    h1
      font-size: 36px
      margin-bottom: 1.5rem
      padding-bottom: 0.75rem
      border-bottom: 2px solid #e1e8ed
      
    h2
      font-size: 28px
      margin-top: 2.5rem
      
    h3
      font-size: 22px
      color: #2c3e50
      
    h4
      font-size: 18px
      color: #2c3e50
      
    // 段落和文本
    p
      margin-bottom: 1.25rem
      line-height: 1.7
      color: #4a5568
      
    // 列表样式
    ul, ol
      margin-bottom: 1.25rem
      padding-left: 1.5rem
      
      li
        margin-bottom: 0.5rem
        line-height: 1.6
        color: #4a5568
        
    // 代码块样式
    code
      font-family: "JetBrains Mono", "Fira Code", "Source Code Pro", Menlo, Monaco, Consolas, "Courier New", monospace
      font-size: 13px
      background-color: #f7f8fa
      color: #d73a49
      padding: 0.2rem 0.4rem
      border-radius: 4px
      border: 1px solid #e1e8ed
      
    pre
      background-color: #f8f9fa
      border: 1px solid #e1e8ed
      border-radius: 6px
      padding: 1rem
      margin: 1.5rem 0
      overflow-x: auto
      
      code
        background: none
        border: none
        color: #2c3e50
        padding: 0
        
    // 引用块样式
    blockquote
      border-left: 4px solid #1565c0
      background-color: #f8f9fa
      padding: 1rem 1.5rem
      margin: 1.5rem 0
      border-radius: 0 6px 6px 0
      
      p
        color: #5c6975
        margin-bottom: 0
        font-style: italic
        
    // 表格样式
    table
      width: 100%
      border-collapse: collapse
      margin: 1.5rem 0
      font-size: 14px
      
      th, td
        padding: 0.75rem 1rem
        text-align: left
        border-bottom: 1px solid #e1e8ed
        
      th
        background-color: #f8f9fa
        font-weight: 600
        color: #2c3e50
        
      tbody tr:hover
        background-color: #f8f9fa
        
    // 链接样式
    a
      color: #1565c0
      text-decoration: none
      font-weight: 500
      
      &:hover
        text-decoration: underline
        color: #0d47a1
        
    // 分隔线
    hr
      border: none
      border-top: 1px solid #e1e8ed
      margin: 2rem 0 